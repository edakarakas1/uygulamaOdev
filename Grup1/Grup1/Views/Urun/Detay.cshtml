@model Grup1.Models.Urunler

@{
    ViewBag.Title = "Detay";
    Layout = "~/Views/Shared/_Layoutpage.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-4" style="margin-left:45px;">
            <div class="tm-paging-links">
                <nav>
                    <ul style="list-style:none">
                        @if (Model.urunler_Tablosu.KategoriId == 2)
                        {
                            <li><a href="#" class="tm-paging-link active">Pizza</a></li>
                            <li><a href="#" class="tm-paging-link">Salata</a></li>
                            <li><a href="#" class="tm-paging-link">Noodle</a></li>
                        }

                        @if (Model.urunler_Tablosu.KategoriId == 3)
                        {
                            <li><a href="#" class="tm-paging-link">Pizza</a></li>
                            <li><a href="#" class="tm-paging-link active">Salata</a></li>
                            <li><a href="#" class="tm-paging-link">Noodle</a></li>
                        }

                        @if (Model.urunler_Tablosu.KategoriId == 4)
                        {
                            <li><a href="#" class="tm-paging-link">Pizza</a></li>
                            <li><a href="#" class="tm-paging-link">Salata</a></li>
                            <li><a href="#" class="tm-paging-link active">Noodle</a></li>
                        }

                    </ul>
                </nav>
            </div>
        </div>
        <article class="col-lg-6">
            <figure class="tm-person">
                <img src="~/Content/img/gallery/@Model.urunler_Tablosu.UrunResim" alt="Image" class="img-fluid tm-person-img">
                <figcaption class="tm-person-description">
                    <h4 class="tm-person-name">@Model.urunler_Tablosu.KategoriId</h4>
                    <p class="tm-person-title">@Model.urunler_Tablosu.Kategori_Tablosu.KategoriAd</p>
                    <p class="tm-person-about">
                        @Model.urunler_Tablosu.UrunAciklama
                    </p>
                    <br />
                    <p>@String.Format("{0:c2}", Model.urunler_Tablosu.Fiyat)</p>


                </figcaption>
            </figure>
        </article>
    </div>




</div>


